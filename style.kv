<Button>
    font_size: 32
    size_hint: (0.2, 0.2)

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

            canvas.before:
                Color:
                    rgba: (225/255, 232/255, 227/255, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                id: modulus
                text: "%"

            Button:
                text: "CE"

            Button:
                id: clear
                text: "C"
                on_press: root.press()

            Button:
