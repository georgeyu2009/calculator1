

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            # 1 mean you stretch horizontally all the way to the other end of App
            # 0.15 mean the height of textinput is only 15% of the app height (700)
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5
            canvas.before:
                Color:
                    rgba: (225/255, 232/255, 227/255, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "%"
                on_press: root.math_operate("%")

            Button:
                text: "CE"
                on_press: root.clear_entry()

            Button:
                text: "C"
                on_press: root.clear()

            Button:
                text: "/"
                on_press: root.math_operate("/")

            Button:
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(7)

            Button:
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(8)

            Button:
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(9)

            Button:
                text: "X"
                on_press: root.math_operate("*")

            Button:
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(4)

            Button:
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(5)

            Button:
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(6)

            Button:
                text: "â€“"
                on_press: root.math_operate("-")

            Button:
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(1)

            Button:
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(2)

            Button:
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(3)

            Button:
                id: add
                text: "+"
                on_press: root.math_operate("+")

            Button:
                text: "+/-"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.reverse_sign()

            Button:
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(0)

            Button:
                text: "."
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.dot()

            Button:
                text: "="
                on_press: root.equals()

<Button>
    font_size: 32
    size_hint: (0.2, 0.2)